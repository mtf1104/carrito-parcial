<!DOCTYPE html>
<html>
<head>
    <title>Mi Carrito</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Tu Carrito de Compras</h2>
        <a href="/" class="btn btn-secondary mb-3">&larr; Seguir comprando</a>

        <% if(cart.length === 0) { %>
            <div class="alert alert-info">El carrito está vacío.</div>
        <% } else { %>
            <table class="table table-bordered bg-white">
                <thead class="table-dark">
                    <tr>
                        <th>Producto</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% cart.forEach(item => { %>
                        <tr>
                            <td><%= item.name %></td>
                            <td>$<%= item.price %></td>
                            <td style="width: 150px;">
                                <form action="/update-cart" method="POST" class="d-flex justify-content-center align-items-center">
                                    <input type="hidden" name="id" value="<%= item.id %>">
                                    <button type="submit" name="action" value="decrease" class="btn btn-sm btn-outline-secondary">-</button>
                                    <span class="mx-2"><%= item.quantity %></span>
                                    <button type="submit" name="action" value="increase" class="btn btn-sm btn-outline-secondary">+</button>
                                </form>
                            </td>
                            <td>$<%= item.price * item.quantity %></td>
                            <td>
                                <form action="/update-cart" method="POST">
                                    <input type="hidden" name="id" value="<%= item.id %>">
                                    <button type="submit" name="action" value="remove" class="btn btn-sm btn-danger">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <div class="d-flex justify-content-end align-items-center">
                <h3 class="me-4">Total: $<%= cartTotal %></h3>
                
                <% if(user) { %>
                    <form action="/checkout" method="POST">
                        <button type="submit" class="btn btn-success btn-lg">PAGAR AHORA</button>
                    </form>
                <% } else { %>
                    <a href="/login" class="btn btn-warning btn-lg">Inicia Sesión para Pagar</a>
                <% } %>
            </div>
        <% } %>
    </div>
</body>
</html>